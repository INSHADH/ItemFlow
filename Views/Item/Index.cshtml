<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to bottom, #a2c2e8, #ffffff); 
            min-height: 100vh; 
            margin: 0; 
            padding: 0; 
        }

        h1.my-4 {
            font-size: 48px; 
            font-weight: 900; 
            color: whitesmoke; 
            text-shadow: 3px 3px 8px rgba(0, 0, 0, 0.2); 
            font-family: 'Arial', sans-serif; 
        }

        a.btn.btn-primary.mt-4 {
            background-color: #007bff; 
            color: white; 
            padding: 12px 25px; 
            font-size: 16px; 
            font-weight: bold; 
            border-radius: 5px; 
            text-decoration: none; 
            display: inline-block; 
            transition: background-color 0.3s ease;  
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            float: right; 
        }

        .item-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
            padding: 20px;
        }

        .item-card {
            border: 1px solid #ddd;
            background-color : rgb(255,255,255,0.3);
            border-radius: 5px;
            padding: 15px;
            text-align: center;
        }

            .item-card img {
                max-width: 100%;
                height: 50%;
                border-radius: 5px;
            }
    </style>
</head>
<body>
    <div class="container">
        <a href="/Item/Create" class="btn btn-primary mt-4">Add New Item</a>
        <div>
        <h1 class="my-4">Travel Up</h1>
        <div class="item-grid" id="item-grid">
            @foreach (var item in Model)
            {
                <div class="item-card" data-id="@item.Id">
                    <img src="@item.ImageUrl" alt="@item.Name" />
                    <h4>@item.Name</h4>
                    <p>@item.Description</p>
                        <a href="/Item/Edit/@item.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i>
                        </a>

                        <button class="btn btn-danger delete-item" data-id="@item.Id">
                            <i class="fas fa-trash"></i>
                        </button>
                </div>
            }
        </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $(".delete-item").on("click", function () {
                const itemId = $(this).data("id");
                debugger
                if (confirm("Are you sure you want to delete this item?")) {
                    $.ajax({
                        url: `/Item/Delete/${itemId}`, 
                        type: "POST",
                        success: function () {
                            $(`.item-card[data-id='${itemId}']`).remove();
                        },
                        error: function () {
                            alert("Error deleting item. Please try again.");
                        }
                    });
                }
            });
        });
    </script>
</body>
</html>


